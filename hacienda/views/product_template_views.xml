<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_hacienda" model="ir.ui.view">
        <field name="name">product.template.form.hacienda</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="inside">
                <group string="Hacienda" col="2">
                    <field name="cabys_code_id" options="{'no_open': False, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="hacienda_measurement_unit_id" options="{'no_open': False, 'no_create': True, 'no_create_edit': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
