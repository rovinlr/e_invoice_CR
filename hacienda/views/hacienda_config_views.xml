<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_hacienda" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.hacienda</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings' or hasclass('settings') or (hasclass('o_form_sheet') and hasclass('o_settings'))]" position="inside">
                <div class="app_settings_block" data-string="Hacienda" string="Hacienda" groups="base.group_system">
                    <h2>Facturación electrónica Costa Rica</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" data-key="hacienda_credentials">
                            <div class="o_setting_left_pane">
                                <span class="fa fa-university"/> 
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="hacienda_api_base_url" string="Credenciales Hacienda"/>
                                <div class="text-muted">Configura la conexión con los servicios del Ministerio de Hacienda.</div>
                                <div class="mt16">
                                    <field name="hacienda_api_base_url" placeholder="https://api.comprobanteselectronicos.go.cr"/>
                                    <field name="hacienda_username"/>
                                    <field name="hacienda_password" password="True"/>
                                    <field name="hacienda_certificate_pin" password="True"/>
                                    <field name="hacienda_cert_key" filename="hacienda_cert_key_filename" widget="binary" options="{'no_open': True}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" data-key="hacienda_company">
                            <div class="o_setting_left_pane">
                                <span class="fa fa-building"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="hacienda_system_provider_code" string="Datos de compañía"/>
                                <div class="text-muted">Información requerida en los comprobantes electrónicos.</div>
                                <div class="mt16">
                                    <field name="hacienda_system_provider_code" placeholder="3101225890"/>
                                    <field name="hacienda_activity_code" placeholder="602001"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
