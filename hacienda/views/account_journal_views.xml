<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_journal_form_hacienda" model="ir.ui.view">
        <field name="name">account.journal.form.hacienda</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page name="hacienda_settings" string="Hacienda" groups="account.group_account_invoice">
                    <group invisible="type not in ('sale', 'purchase')" col="2">
                        <group>
                            <field name="cr_use_xml_44"/>
                            <field name="cr_electronic_document_type" required="cr_use_xml_44" readonly="not cr_use_xml_44"/>
                        </group>
                        <group invisible="not cr_use_xml_44">
                            <label for="cr_electronic_document_type" string="Información"/>
                            <p class="o_form_label">Seleccione el tipo de comprobante electrónico que emitirá desde este diario.</p>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
