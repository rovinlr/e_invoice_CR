<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_payment_method_list" model="ir.ui.view">
        <field name="name">hacienda.move.payment.method.list</field>
        <field name="model">hacienda.move.payment.method</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle" optional="hide"/>
                <field name="code"/>
                <field name="description"
                       modifiers="{'invisible': [('code', '!=', '99')], 'required': [('code', '=', '99')]}"/>
                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>

    <record id="view_move_payment_method_form" model="ir.ui.view">
        <field name="name">hacienda.move.payment.method.form</field>
        <field name="model">hacienda.move.payment.method</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sequence" optional="hide"/>
                        <field name="code"/>
                        <field name="description"
                               modifiers="{'invisible': [('code', '!=', '99')], 'required': [('code', '=', '99')]}"/>
                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_move_form_hacienda" model="ir.ui.view">
        <field name="name">account.move.form.hacienda</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Hacienda" name="cr_hacienda"
                      modifiers="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}">
                    <group modifiers="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}">
                        <group>
                            <field name="hacienda_document_state" readonly="1"/>
                        </group>
                        <group>
                            <field name="hacienda_document_state" readonly="1"/>
                        </group>
                        <group>
                            <field name="cr_sale_condition"/>
                            <field name="cr_sale_condition_other"
                                   modifiers="{'invisible': [('cr_sale_condition', '!=', '99')], 'required': [('cr_sale_condition', '=', '99')]}"/>
                            <field name="cr_credit_term"
                                   modifiers="{'invisible': [('cr_sale_condition', 'not in', ['02', '10'])], 'required': [('cr_sale_condition', 'in', ['02', '10'])]}"/>
                        </group>
                    </group>
                    <group modifiers="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}">
                        <field name="cr_payment_method_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle" optional="hide"/>
                                <field name="code"/>
                                <field name="description"
                                       modifiers="{'invisible': [('code', '!=', '99')], 'required': [('code', '=', '99')]}"/>
                                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="sequence" optional="hide"/>
                                        <field name="code"/>
                                        <field name="description"
                                               modifiers="{'invisible': [('code', '!=', '99')], 'required': [('code', '=', '99')]}"/>
                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_hacienda_state" model="ir.ui.view">
        <field name="name">account.move.tree.hacienda.state</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="hacienda_document_state" optional="show"
                       modifiers="{'column_invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}"/>
            </xpath>
        </field>
    </record>
</odoo>
